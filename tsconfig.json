{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es6",
    "outDir": "out",
    "lib": [
      "es6",
      "es2017"
    ],
    "sourceMap": true,
    "rootDir": ".",
    "noUnusedLocals": false,
    "noUnusedParameters": true,
    "strict": true // Enable several strict checks
  },
  "include": [
    "src/*.ts",
    "src/**/*.ts",
    "test/*.ts",
    "test/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    ".vscode-test"
  ]
}